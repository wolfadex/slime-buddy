{
  "name": "slime-buddy",
  "productName": "Slime Buddy",
  "version": "1.1.0",
  "description": "A little slime buddy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager ./ SlimeBuddy --all --out ./build/tmp --overwrite --icon=./assets/icons/icon.icns",
	"pack": "build --dir",
	"dist": "build"
  },
  "build": {
    "win": {
      "icon": "assets/icons/icon.ico"
    }
},
  "keywords": [
    "slime",
    "toy",
    "electron"
  ],
  "author": "Wolfgang Schuster",
  "devDependencies": {
    "electron": "^1.4.1",
    "electron-builder": "^10.9.3",
    "electron-packager": "^8.4.0"
  },
  "dependencies": {
    "configstore": "^2.1.0"
  }
}
